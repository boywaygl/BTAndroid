<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Độ C"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/txtdoc"
        android:layout_below="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <TextView
        android:id="@+id/tv2"
        android:layout_below="@+id/txtdoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Độ F"
        android:textSize="20dp"
        />
    <EditText
        android:id="@+id/txtdof"
        android:layout_below="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <Button
        android:id="@+id/btndoiC"
        android:layout_below="@+id/txtdof"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:text="Đồi sang C"></Button>
    <Button
        android:id="@+id/btndoiF"
        android:layout_below="@+id/txtdof"
        android:layout_toRightOf="@+id/btndoiC"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:text="Đồi sang F"></Button>
    <Button
        android:id="@+id/btnclear"
        android:layout_below="@+id/btndoiF"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Clear"></Button>
</RelativeLayout>